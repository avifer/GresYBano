<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_favorite_category__card__parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/row_favorite_category__card__parent__margin"
    app:cardCornerRadius="@dimen/row_favorite_category__card__parent__card_corner_radius"
    app:cardElevation="@dimen/row_favorite_category__card__parent__card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/row_favorite_category__img__category"
            android:layout_width="@dimen/row_favorite_category__img__category__width"
            android:layout_height="@dimen/row_favorite_category__img__category__height"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/row_favorite_category__view__selected"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_favorite_category__label__name_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/row_favorite_category__label__name_category__margin_vertical"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textSize="@dimen/row_favorite_category__label__name_category__text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/row_favorite_category__img__category"
            app:layout_constraintStart_toStartOf="@id/row_favorite_category__img__category"
            app:layout_constraintTop_toBottomOf="@id/row_favorite_category__img__category" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
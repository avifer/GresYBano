<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row__height_publication__card__parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/row__height_publication__margin"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="@dimen/row__height_publication__card_corner_radius"
    app:cardElevation="@dimen/row__height_publication__card_elevation"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/row__height_publication__img__image_publication"
            android:layout_width="@dimen/row__height_publication__img__image_publication__size"
            android:layout_height="@dimen/row__height_publication__img__image_publication__size"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.45"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/row__height_publication__img__image_publication"
            app:layout_constraintEnd_toEndOf="@id/row__height_publication__img__image_publication"
            app:layout_constraintStart_toStartOf="@id/row__height_publication__img__image_publication"
            app:layout_constraintTop_toTopOf="@id/row__height_publication__img__image_publication" />

        <TextView
            android:id="@+id/row__height_publication__label__name_publication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/row__height_publication__label__name_publication__margin_horizontal"
            android:layout_marginBottom="@dimen/row__height_publication__label__name_publication__margin_bottom"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/row__height_publication__label__amount_publication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Cuartos de baÃ±os" />

        <ImageView
            android:id="@+id/row__height_publication__img__amount_publication"
            android:layout_width="@dimen/row__height_publication__img__amount_publication__size"
            android:layout_height="@dimen/row__height_publication__img__amount_publication__size"
            android:layout_marginStart="@dimen/row__height_publication__img__amount_publication__margin_start"
            android:layout_marginBottom="@dimen/row__height_publication__img__amount_publication__margin_bottom"
            android:src="@drawable/icon_images"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/row__height_publication__label__amount_publication"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/row__height_publication__label__amount_publication__margin_start"
            android:layout_marginEnd="@dimen/row__height_publication__label__amount_publication__margin_end"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/row__height_publication__img__amount_publication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/row__height_publication__img__amount_publication"
            app:layout_constraintTop_toTopOf="@id/row__height_publication__img__amount_publication"
            tools:text="333" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>